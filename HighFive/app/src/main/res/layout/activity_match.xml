<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="It's a match!"
        android:id="@+id/textView4"
        android:textSize="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="100dp"
        android:id="@+id/linearLayout">

        <andtinder.view.ProfilePictureView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:src="@drawable/five_moose"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></andtinder.view.ProfilePictureView>

        <andtinder.view.ProfilePictureView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView4"
            android:layout_marginLeft="40dp"
            android:src="@drawable/cats"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"></andtinder.view.ProfilePictureView>


    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:text="See Profile"
        android:textColor="@color/white"
        android:id="@+id/button6"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_corner1"
        android:layout_below="@+id/linearLayout"
        android:textAllCaps="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="108dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>